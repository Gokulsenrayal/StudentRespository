@model IEnumerable<LinqStoringData.ViewModel.TotalCalculation>

@{
    ViewBag.Title = "Filter";
}

<h2 class="pt-5 pb-2">Filter</h2>
<h6 class="text-bg-danger">@ViewBag.Message</h6>

<table class="table table-success table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Highest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Intermediate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lowest)
        </th>
       
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Highest)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Intermediate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lowest)
                </td>

            </tr>
        }
    </tbody>
   
</table>
<div>
    @Html.ActionLink("Highest Scorer", "HighScorer", "Home", null, new { @class = "btn btn-primary" })
</div>